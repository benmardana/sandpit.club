---
import { SEO } from "astro-seo";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.4.19/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <style>
      :root {
        --primary: #10b981;
      }
    </style>
    <SEO
      title="Sandpit Club"
      titleTemplate="%s | Melbourne Dads Community"
      description="Connect with other dads in Melbourne for playdates, activities and community. Join Sandpit Club for regular meetups, a social group for dads and kids, and a supportive environment."
      canonical="https://sandpit.club"
      openGraph={{
        basic: {
          title: "Sandpit Club | Melbourne Dads Community",
          type: "website",
          image: "https://sandpit.club/opengraph.png",
          url: "https://sandpit.club",
        },
        optional: {
          description: "Connect with other dads in Melbourne for playdates, activities and community. Join Sandpit Club for regular meetups, a social group for dads and kids, and a supportive environment.",
          siteName: "Sandpit Club",
          locale: "en_AU",
        },
        image: {
          alt: "Sandpit Club logo",
          width: 1200,
          height: 630,
        },
      }}
      twitter={{
        card: "summary_large_image",
        title: "Sandpit Club | Melbourne Dads Community",
        description: "Connect with other dads in Melbourne for playdates, activities and community. Join Sandpit Club for regular meetups, a social group for dads and kids, and a supportive environment.",
        image: "https://sandpit.club/opengraph.png",
        imageAlt: "Sandpit Club logo",
      }}
    />
  </head>
  <body class="min-h-screen bg-base-100">
  
    <main class="container mx-auto px-4 py-8 max-w-md">
      
      <!-- Header -->
      <div class="text-center mb-8">
        <div class="inline-block relative">
          <h1 class="text-5xl font-bold tracking-tight">Dad's Group</h1>
          <span class="badge badge-primary absolute -top-2 -right-8 text-white font-semibold">NEW</span>
        </div>
      </div>
  
      <!-- Value Props -->
      <div class="space-y-4 text-center mb-8">
        <p class="text-xl font-semibold">Connect with other dads in the area</p>
        <p class="text-xl font-semibold">Kids of all ages welcome</p>
        <p class="text-xl font-semibold">Coffee and play in a park</p>
        <p class="text-xl font-semibold">Regular Meetups Planned</p>
      </div>
  
      <!-- CTA Card -->
      <div class="card bg-base-200 shadow-sm">
        <div class="card-body items-center text-center">
          <p class="text-lg font-medium mb-4">Check the website for dates and more info</p>
          
          <!-- QR Code placeholder -->
          <div class="bg-white p-4 rounded-lg mb-4">
            <svg class="w-32 h-32" viewBox="0 0 100 100">
              <rect width="100" height="100" fill="white"/>
              <text x="50" y="50" text-anchor="middle" dominant-baseline="middle" font-size="8" fill="#666">QR Code</text>
            </svg>
          </div>
  
          <a href="https://sandpit.club" class="link link-primary text-xl font-semibold">sandpit.club</a>
        </div>
      </div>
  
      <!-- Join Button -->
      <div class="mt-8 text-center">
        <a href="#join" class="btn btn-primary btn-lg text-white w-full">Join the Group</a>
      </div>
  
      <!-- Footer -->
      <footer class="mt-12 text-center text-sm text-base-content/60">
        <p>Melbourne, Australia</p>
      </footer>
  
    </main>
  
  </body>
</html>